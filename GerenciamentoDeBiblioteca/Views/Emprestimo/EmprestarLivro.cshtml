@model EmprestimoViewModel

<div class="row orderForm">

    <form asp-controller="Emprestimo" asp-action="EmprestarLivro" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Lend a book</h3>
        @Html.HiddenFor(m => Model.Livro.LivroId)
        <div class="form-group">
            <label asp-for="Livro.Cliente" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Livro.ClienteId,
                                                  new SelectList(Model.Clientes.Select(x => new { Value = x.ClienteId, Text = x.Nome }), "Value", "Text"),
                                                  "Selecione o cliente",
                                                  htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Voltar" asp-controller="Emprestimo" asp-action="Listar" />
                <input class="btn btn-success" type="submit" value="Emprestar" />
            </div>
        </div>
    </form>
</div>