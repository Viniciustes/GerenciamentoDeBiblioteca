@model IEnumerable<Livro>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titulo do livro</th>
            <th>Nome do autor</th>
            <th>Realizar o emprestimo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var livro in Model)
        {
            <tr>
                <td>@livro.LivroId</td>
                <td>@livro.Titulo</td>
                <td>@livro.Autor.Nome</td>
                <td><a class="btn btn-success" asp-area="" asp-controller="Emprestimo" asp-action="EmprestarLivro" asp-route-livroId="@livro.LivroId">Emprestar</a></td>
            </tr>
        }
    </tbody>
</table>